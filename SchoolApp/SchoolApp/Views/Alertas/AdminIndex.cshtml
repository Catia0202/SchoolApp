@model IEnumerable<SchoolApp.Data.Entities.Alerta>

@{
    ViewData["Title"] = "Alertas";
        Layout = null;
}

<head>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
      <link href="~/css/Index.css" rel="stylesheet">
      <partial name="_sidebar" />
</head>
<h1 style="font-size: 50px;align-items:center;background: #ecf4ffa3;margin-left: 680px;margin-top: 30px;padding-right:0px; width: 188px;">Alertas</h1>

     <body        style="
    padding-top: 70px;
    margin-left: 200px;
    width: 1527px;
 background-image: url(../images/classroom.jpg) ; background-repeat: no-repeat;background-size: cover;

">
  
   
            <dir class="board">
                <table width="100%">
                    <thead>
                        <tr>
                              <td>Funcionário:</td>
                            <td>Data</td>
                         
                          
                               <td>Assunto</td>
                           
                            <td>Problema</td>

                                <td>Estado</td>
                              <td></td>
                        </tr>
                    </thead>
                    <tbody>
            @if(Model.Count() == 0)
            {
                <tr  style="
    background-color: #ecc190;"><td><h2  style="color:black; text-align:center">Não existem Alertas</h2></td></tr>
                
                  
            }
            @foreach (var item in Model) {
                        <tr style="
    background-color: #ecc190;">
                                                           
                                    <td  class="people-de">
                                        <h5> @Html.DisplayFor(modelItem => item.User.FirstName)</h5>
                                        <p> @Html.DisplayFor(modelItem => item.User.Email)</p>
                                    </td>                                
                             <td class="people-des">
                                <h5> @Html.DisplayFor(modelItem => item.Data.Date)</h5>
                                
                            </td>
                            <td class="people-des">
                                <h5> @Html.DisplayFor(modelItem => item.Assunto)</h5>
                                
                            </td>

                            <td>
                                  @Html.DisplayFor(modelItem => item.Problema)
                            </td>
                                <td>
                                  @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                          
                          <td class="edit">  <a asp-action="DetailsAlertaAdmin" asp-route-id="@item.Id">Abrir</a> 
                      
                        </tr>
                        }
                    </tbody>
                </table>
            </dir>
    

         </body> 



