@model IList<SchoolApp.Models.NotaAlunoViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<partial name="_Navbar" />
<h1 style="font-size: 50px;align-items:center;background: #ecf4ffa3;margin-left: 766px;margin-top: 30px;padding-right:0px;width: 163px;"> Alunos</h1>
<head>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
      <link href="~/css/Index.css" rel="stylesheet">
</head>




<form method="post">
    


      
            <dir class="board">
                <table width="100%">
                    <thead>
                        <tr>
                            <td> Nome  </td>
                         
                           
                            <td>Curso</td>
                          
                              <td></td>
                            
                        </tr>
                    </thead>
                    <tbody>
            @if(Model.Count() == 0)
            {
                <tr><td><h2  style="color:black; text-align:center">@ViewBag.message</h2></td></tr>
                
                  
            }
            @foreach (var item in Model) {
                        <tr>
                            <td class="item">
                                <img src="@Url.Content(item.Foto)" alt="">
                                    <div class="people-de">
                                        <h5> @Html.DisplayFor(modelItem => item.Nome) </h5>
                                        
                                    </div>                                
                            </td>
           
                            <td class="active">
                                  @Html.DisplayFor(modelItem => item.Cursos.FirstOrDefault().Text)
                            </td>
                       
                            <td class="people-des">
                                  <input type="hidden" asp-for="@item.alunoId" asp-for="@item.CursoId"/>

                  <input type="submit" asp-controller="Notas" asp-action="Index" asp-route-AlunoId="@item.alunoId" asp-route-turmaid="@item.CursoId" value="View" class="btn btn-secondary btn-sm" />
                          
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </dir>
       <p style="text-align: center;"><a class="button-56" role="button"asp-action="CreateTurmaNota">Criar Nova Nota</a> </p> 

       </form>
<partial name="_footer" />

