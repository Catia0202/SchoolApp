@model IEnumerable<SchoolApp.Data.Entities.TurmaDisciplina>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disciplina.Descrição)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

     


@foreach (var item in Model){
   
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Disciplina.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disciplina.Duration)
            </td>
                 <td>
                @Html.DisplayFor(modelItem => item.Disciplina.Descrição)
            </td>
            <td>
             <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
         </td>
        </tr>
}
    </tbody>
</table>
