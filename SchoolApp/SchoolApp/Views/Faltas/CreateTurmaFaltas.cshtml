@model SchoolApp.Models.FaltaTurmaViewModel
@{
    ViewData["Title"] = "Adicionar Falta - Turma";
}

<br />
<div class="row">
      <form asp-action="CreateTurmaFaltas">
      <div class="form-group text-center">
                <label asp-for="turmaid" class="control-label" value="Selecione a turma"></label>
                <select asp-for="turmaid" asp-items="Model.Turmas" class="form-control"></select>
                <span asp-validation-for="turmaid" class="text-danger"></span>
              </div>
                 <div class="form-group">
                <input type="submit" value="Continuar" class="btn btn-primary" />
            </div>


          </form>

       
    </div>
      <div class="form-group text-center">
   <a asp-controller="Faltas" asp-action="Index" class="btn btn-secondary">Voltar</a>
   </div>