@model IEnumerable<SchoolApp.Data.Entities.Disciplina>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<head>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"/>
      <link href="~/css/Index.css" rel="stylesheet">
      <partial name="_sidebar" />
</head>
<h1 style="font-size: 50px;align-items:center;background: #ecf4ffa3;margin-left: 680px;margin-top: 30px;padding-right:0px;width: 255px;"> Disciplinas</h1>

     <body        style="
    padding-top: 70px;
    margin-left: 200px;
    width: 1527px;
 background-image: url(../images/classroom.jpg) ; background-repeat: no-repeat;background-size: cover;

">
  
   
            <dir class="board">
                <table width="100%">
                    <thead>
                        <tr>
                            <td> Nome</td>
                         
                            <td>Duração</td>
                               <td>Descrição:</td>
                           
                            <td></td>
                              <td></td>
                        </tr>
                    </thead>
                    <tbody>
            @if(Model.Count() == 0)
            {
                <tr><td><h2  style="color:black; text-align:center">@ViewBag.message</h2></td></tr>
                
                  
            }
            @foreach (var item in Model) {
                        <tr style="
    background-color: #ecc190;">
                                                           
                                    <td  class="people-de">
                                        <h5> @Html.DisplayFor(modelItem => item.Nome)</h5>
                                    </td>                                
                           
                            <td class="people-des">
                                <h5> @Html.DisplayFor(modelItem => item.Duracao) horas</h5>
                                
                            </td>

                            <td>
                                  @Html.DisplayFor(modelItem => item.Descrição)
                            </td>
                            
                          
                          <td class="edit">  <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                            <td class="edit">  <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a> 
                        </tr>
                        }
                    </tbody>
                </table>
            </dir>
       <p style="text-align: center;"><a class="button-56" role="button" asp-action="Create">Criar Nova Disciplina</a> </p> 

         </body> 








